<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <title>Document</title>
</head>
<body>
    
    <form method="post">
        <!-- Selection group -->
        <div class="radio-group">
        <% themes.forEach( theme => { %>
            <div class='radio' data-value="<%=theme%>">
                <img src="./themes/<%=theme%>/misc/theme_logo.png" alt="">
                <span><%=theme%></span>
            </div>
        <% }); %>
        </div>
        <!-- Actual choice to post -->
        <input id="finalChoice" name="theme" type="hidden" value="classic">
        <input type="submit" value="Create Game">
    </form>

    <script>
        // Set values of form
        $('.radio-group .radio').click(function(){
            $(this).parent().find('.radio').removeClass('selected');
            $(this).addClass('selected');
            // Get new clicked value
            var val = $(this).attr('data-value');
            // Set value to hidden input
            //$(this).parent().find("input[name='theme']").val(val);
            $("#finalChoice").val(val);
        });
    </script>

</body>
</html>